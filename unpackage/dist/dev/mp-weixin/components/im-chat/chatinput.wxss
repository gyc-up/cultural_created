
.footer {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 80rpx;
	min-height: 80rpx;
	border-top: solid 1px #bbb;
	overflow: hidden;
	padding: 5rpx;
	background-color: #F4F5F6;
}
.footer-left {

	width: 80rpx;
	height: 80rpx;

	display: flex;
	justify-content: center;
	align-items: center;
}
.footer-right {
	width: 120rpx;
	height: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #1482D1;
}
.footer-center {
	flex: 1;
	padding-left: 20rpx;
	height: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.footer-center .input-text {
	flex: 1;
	background: #fff;
	/* border: solid 1upx #ddd; */
	padding: 10rpx !important;
	font-family: verdana !important;
	overflow: hidden;
	border-radius: 15rpx;
}
.footer-right .send-comment{
	background-color: #007AFF;
	text-align: center;
	line-height: 60rpx;
	color: #FFFFFF;
	width: 80rpx;
	height: 60rpx;
	border-radius: 5px;
	font-size: 10px;
	/* height: 60upx; */
}

