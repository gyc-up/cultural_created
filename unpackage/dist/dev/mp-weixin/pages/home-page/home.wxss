
.separator {
	position: relative;
}
.separator::after {
	content: '';
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 1px;
	/* 分割线高度 */
	background-color: rgba(128, 128, 128, 0.5);
	/* 灰色透明分割线，RGBA 值表示颜色和透明度 */
}
.background {
	background-size: cover;
	overflow: auto;
}
.lunbotu {
	margin: 5%;
	border: 2px solid black;
	border-radius: 5%;
	border-color: bisque;
}
.lunbotu_img {
